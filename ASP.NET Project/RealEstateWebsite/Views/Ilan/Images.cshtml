
@{
    ViewBag.Title = "Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @{
        Html.BeginForm("Images", "Ilan", FormMethod.Post, new { enctype = "multipart/Form-data" });
        foreach (var item in ViewBag.ilan)
        {
            <div class="container mt-4">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Add Image</h5>
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Choose Image</td>
                                            <td><input type="hidden" name="id" value="@item.IlanId" /></td>
                                            <td><input type="file" name="file" class="form-control-file" /></td>
                                        </tr>
                                        <tr>
                                            <td colspan="3">
                                                <input type="submit" value="Add" class="btn btn-primary" />
                                                <span class="ml-2">
                                                    @Html.ActionLink("List Of Advertises", "Index", null, new { @class = "btn btn-warning" })
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
