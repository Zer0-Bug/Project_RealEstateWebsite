        @foreach (var item in ViewBag.rsml)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="~/Content/Images/@item.ResimAd" height="250" width="250" />
                </div>
            </div>
        }
    </div>
</div>
