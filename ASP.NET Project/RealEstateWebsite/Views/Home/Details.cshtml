@model  RealEstateWebsite.Models.Ilan
@{
    ViewBag.Title = "Details1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    
</head>


<body>

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    
                    <div class="carousel-inner" role="listbox">
                        @{ int i = 0;}
                        @foreach (var item in ViewBag.imgs)
                        {
                            i=i+1;
                            var active = i == 1 ? "active" : "";
                            <div class="item @active">
                                <img src="/Content/images/@item.ResimAd" alt="..." style="width:1150px;height:400px;">

                            </div>

                        }



                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <table class="table table-bordered table-hover table-responsive table-striped table-condensed">
                    <tbody>
                        <tr><th colspan="2">Advertise Features</th></tr>
                        <tr><td><strong>Explanation</strong> </td><td>@Model.Acıklama</td></tr>
                        <tr><td><strong>Price</strong> </td><td>@Model.Fiyat</td></tr>
                        <tr><td><strong>Situation</strong> </td><td>@Model.Tip.Durum.DurumAd</td></tr>
                        <tr><td><strong>Type</strong> </td><td>@Model.Tip.TipAd</td></tr>
                        <tr><td><strong>Area</strong> </td><td>@Model.Alan m<sup>2</sup></td></tr>
                        <tr><td><strong>Number Of Room</strong> </td><td>@Model.OdaSayisi</td></tr>
                        <tr><td><strong>Number Of Bathroom</strong> </td><td>@Model.BanyoSayisi</td></tr>
                        <tr><td><strong>Floor</strong> </td><td>@Model.Kat</td></tr>
                        <tr><td><strong>Address</strong> </td><td>@Model.Adres</td></tr>
                        <tr><td><strong>Neighborhood</strong> </td><td>@Model.Mahalle.MahalleAd</td></tr>
                        <tr><td><strong>District</strong> </td><td>@Model.Mahalle.Semt.SemtAd</td></tr>
                        <tr><td><strong>City</strong> </td><td>@Model.Mahalle.Semt.Sehir.SehirAd</td></tr>
                        <tr>
                            <td><strong>Credit</strong> </td>
                            <td>
                                @if (Model.Kredi == true)
                                {
                                    <label class="label label-success">YES</label>
                                }
                                else
                                {
                                    <label class="label label-danger">NO</label>
                                }
                            </td>
                        </tr>
                        <tr><td><strong>Phone</strong> </td><td><button class="btn btn-success btn-block"> <i class="fa fa-phone" aria-hidden="true"></i> @Model.Telefon</button> </td></tr>
                        <tr>
                            <td><strong>Email</strong></td>
                            <td>
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <br />

    </div>


</body>

</html>

