@model IEnumerable<RealEstateWebsite.Models.ProfilGuncelleme>
@{
    ViewBag.Title = "GetUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="row">
        <div class="col-md-3">
            <br />
            <!--Filtreleme Kısmı-->
            <form class="form-horizontal">
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label"> Least</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Least(Price)">
                    </div>
                </div>
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label">Most</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Most(Prize)">
                    </div>
                </div>
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label">City</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="City">
                    </div>
                </div>
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label">District</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="District">
                    </div>
                </div>
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label">Neighborhood</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Neighborhood">
                    </div>
                </div>
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label">Situation</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Situation">
                    </div>
                </div>
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label">Type</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Type">
                    </div>
                </div>



                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-search" aria-hidden="true"></i> FILTER</button>
                    </div>
                </div>
            </form>
        </div>

        
        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index">ADMIN PAGE</a></li>
                        <li class="breadcrumb-item active" aria-current="page">LIST OF SITUATIONS</li>
                    </ol>
                </nav>
                <a class="btn btn-primary btn-block" href="@Url.Action("UserCreate")">ADD USER</a>
                <br />
                <table class="table">
                    <tr>
                        
                        <th>
                            User Name
                        </th>
                        <th>
                            User Surname
                        </th>
                        <th>
                            User Email
                        </th>
                        <th>
                            User (User Name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UserEdit", new { id = item.id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "UserDelete", new { id = item.id }, new { @class = "btn btn-danger" })
                        <!--Url.Action metodu ile Controllerdaki Action metodlarına parametre gönderme . Böyle bir şey yapmak zorunda kalırsan AppStart ın içindeki RouteCongigde RouteMapi düzenlemen gerekecek. -->
                    </td>
                </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
